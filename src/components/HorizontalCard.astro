---
const { title, img, desc, url, badge, tags, target = '_blank',aspectratio=16/9 } = Astro.props;
import { Picture } from '@astrojs/image/components';

---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      <Picture src={img} widths={[318,640]}  sizes="(max-width: 800px) 100vw, 800px" aspectRatio={aspectratio} alt={title} class="max-w-full md:max-w-[13rem] rounded-lg" />
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge badge-outline">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>
